<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.springleaf.knowseek.mapper.pgvector.VectorRecordMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.springleaf.knowseek.model.entity.VectorRecord">
        <id column="id" property="id" />
        <result column="user_id" property="userId" />
        <result column="organization_id" property="organizationId" />
        <result column="knowledge_base_id" property="knowledgeBaseId" />
        <result column="file_id" property="fileId" />
        <result column="embedding" property="embedding" />
        <result column="chunk_index" property="chunkIndex" />
        <result column="chunk_text" property="chunkText" />
        <result column="created_at" property="createdAt" />
        <result column="updated_at" property="updatedAt" />
        <result column="deleted" property="deleted" />
    </resultMap>

    <resultMap id="VectorRecordWithDistanceMap" type="com.springleaf.knowseek.model.bo.VectorRecordWithDistanceBO">
        <id column="id" property="id" />
        <result column="user_id" property="userId" />
        <result column="knowledge_base_id" property="knowledgeBaseId" />
        <result column="file_id" property="fileId" />
        <result column="chunk_index" property="chunkIndex" />
        <result column="chunk_text" property="chunkText" />
        <result column="embedding" property="embedding" />
        <result column="distance" property="distance" />
    </resultMap>

    <!-- 插入记录 -->
    <insert id="insert" parameterType="com.springleaf.knowseek.model.entity.VectorRecord"
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO tb_vector_record (
        user_id,
        knowledge_base_id,
        organization_id,
        file_id,
        embedding,
        chunk_index,
        chunk_text,
        created_at,
        updated_at
        ) VALUES (
        #{userId},
        #{knowledgeBaseId},
        #{organizationId},
        #{fileId},
        #{embedding}::vector,
        #{chunkIndex},
        #{chunkText},
        NOW(),
        NOW())
    </insert>

    <!-- 用 CDATA 包裹包含 '<' 的 SQL -->
    <select id="findTopKByEmbedding" resultMap="BaseResultMap">
        <![CDATA[
        SELECT
            id, user_id, knowledge_base_id, embedding, chunk_text
        FROM tb_vector_record
        WHERE user_id = #{userId}
          AND knowledge_base_id = #{knowledgeBaseId}
          AND deleted = false
        ORDER BY embedding <-> #{queryVector}
        LIMIT #{topK}
        ]]>
    </select>

    <select id="findTopKByEmbeddingWithDistance" resultMap="VectorRecordWithDistanceMap">
        <![CDATA[
            WITH candidates AS (
                SELECT
                    id,
                    user_id,
                    knowledge_base_id,
                    file_id,
                    chunk_index,
                    chunk_text,
                    embedding,
                    (embedding <-> #{queryVector}) AS distance
                FROM tb_vector_record
                WHERE user_id = #{userId}
                  AND knowledge_base_id = #{knowledgeBaseId}
                  AND deleted = false
            )
            SELECT *
            FROM candidates
            WHERE distance < 0.92
            ORDER BY distance
            LIMIT 15
        ]]>
    </select>

</mapper>