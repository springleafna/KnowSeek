<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.springleaf.knowseek.mapper.UserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.springleaf.knowseek.model.entity.User">
        <id column="id" property="id" />
        <result column="username" property="username" />
        <result column="password" property="password" />
        <result column="role" property="role" />
        <result column="org_tags" property="orgTags" />
        <result column="primary_org" property="primaryOrg" />
        <result column="created_at" property="createdAt" />
        <result column="updated_at" property="updatedAt" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, username, password, role, org_tags, primary_org, created_at, updated_at
    </sql>

    <!-- 根据ID查询用户 -->
    <select id="selectById" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM tb_user
        WHERE id = #{id}
    </select>

    <!-- 根据用户名查询用户 -->
    <select id="selectByUsername" parameterType="java.lang.String" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM tb_user
        WHERE username = #{username}
    </select>

    <!-- 查询所有用户 -->
    <select id="selectAll" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM tb_user
    </select>

    <!-- 查询用户总数 -->
    <select id="count" parameterType="java.util.Map" resultType="java.lang.Integer">
        SELECT COUNT(*)
        FROM tb_user
        <where>
            <if test="username != null and username != ''">
                AND username LIKE CONCAT('%', #{username}, '%')
            </if>
            <if test="role != null and role != ''">
                AND role = #{role}
            </if>
            <if test="status != null">
                AND status = #{status}
            </if>
        </where>
    </select>

    <!-- 插入用户 -->
    <insert id="insert" parameterType="com.springleaf.knowseek.model.entity.User" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO tb_user (username, password, role, org_tags, primary_org)
        VALUES (#{username}, #{password}, #{role}, #{orgTags}, #{primaryOrg})
    </insert>

    <!-- 更新用户 -->
    <update id="updateById" parameterType="com.springleaf.knowseek.model.entity.User">
        UPDATE tb_user
        <set>
            <if test="username != null">username = #{username},</if>
            <if test="password != null">password = #{password},</if>
            <if test="role != null">role = #{role},</if>
            <if test="orgTags != null">org_tags = #{orgTags},</if>
            <if test="primaryOrg != null">primary_org = #{primaryOrg},</if>
            updated_at = CURRENT_TIMESTAMP
        </set>
        WHERE id = #{id}
    </update>

    <!-- 删除用户 -->
    <delete id="deleteById" parameterType="java.lang.Long">
        DELETE FROM tb_user
        WHERE id = #{id}
    </delete>

</mapper>